<h1><%= @tag.name %></h1>
<hr>

<p>Recipies with this tag:</p>
<ul>
<% @tag.recipes.each do |recipe| %>
  <li><a href="/recipes/<%= recipe.slug %>"><%= recipe.name %></a></li>
  <% end %>
</ul>
<br>
<hr>

<div class='hide_buttons'><button class='edit'>Edit Tag</button>  <button><a href="/tags/<%= @tag.slug %>"
   data-confirm="Are You Sure?"
   data-method="delete"
   rel="nofollow" class="delete_button" >Delete</a></button></div>
<br>
<div class='edit_form'>
  <form action="/tags/<%= @tag.slug %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <%= render('form') %>
    <button>Update Tag</button>
  </form>

</div>
